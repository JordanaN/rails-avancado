<div class="container">
    <div class="jumbotron">
        <h2>List of Customer</h2>
        <%= link_to "New", new_customer_path, remote: true, class: 'btn btn-primary' %>
    </div>
    <div class="modal-customer"></div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            <%= render @customers %>
        </tbody>
    </table>
    <%= render 'modal' %>

</div>